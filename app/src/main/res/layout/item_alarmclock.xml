<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/alarmclock_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#F3F3F3"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alarmclock_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="2016-2-23 22:29"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/alarmclock_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="闹钟标题"
                android:textColor="#333"
                android:textSize="22sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/alarmclock_tv_videotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【全息投影视频源】CUTIE8800（原画） 高清.mp4"
            android:textColor="#666"
            android:textSize="14sp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>